	<parameter name="Tipo_Cliente" class="java.lang.String"/>
	<parameter name="REPORT_DIR" class="java.lang.String" isForPrompting="false"/>
	<queryString>
		<![CDATA[SELECT
    V.num_placa,
    V.modelo,
    CASE
        WHEN C.tipo = 'natural' THEN C.nombres || ' ' || COALESCE(C.apellidos, '')
        ELSE C.nombres
    END AS nombre_cliente,
    C.num_doc
FROM
    VEHICULO V
JOIN
    CLIENTE C ON V.cliente_id = C.cliente_id
WHERE
    C.tipo = $P{Tipo_Cliente}  -- ⬅️ ¡Aquí está el filtro por el parámetro!
ORDER BY
    nombre_cliente, V.num_placa;]]>
	</queryString>
